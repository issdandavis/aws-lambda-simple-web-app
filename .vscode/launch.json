{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Run Integrated Demo",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/demo_integrated_memory_shard.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Run Memory Shard Demo",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/demo_memory_shard.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Run Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v",
        "--cov=symphonic_cipher"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Demo Scenario - Benign",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/demo_integrated_memory_shard.py",
      "args": ["--scenario", "benign"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Demo Scenario - Stolen Credentials",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/demo_integrated_memory_shard.py",
      "args": ["--scenario", "stolen"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
